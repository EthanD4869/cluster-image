FROM scratch
COPY manifests ./manifests
COPY registry ./registry
COPY images ./images
CMD ["kubectl apply -f manifests/strimzi-kafka-crd.yaml","kubectl apply -f manifests/strimzi-kafka-sc.yaml"]
CMD ["kubectl patch storageclass hostpath -p '{\"metadata\": {\"annotations\":{\"storageclass.kubernetes.io/is-default-class\":\"true\"}}}'"]
CMD ["kubectl apply -f kafka-instance.yaml"]
